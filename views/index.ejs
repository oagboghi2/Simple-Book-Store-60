</head>

<% include ./partials/navbar %>

  <body class="masthead text-white text-center">
    <div class="overlay">
      <img class="libpic" src="http://www.rentmetoday.org/blog/wp-content/uploads/2017/07/rounded_library_shelves_books_istock_000032976972_900x450.jpg"  alt="row of books">
    </div>
    <div class="container">
      <div class="row">
        <div class="col-xl-9 mx-auto">
          <h1 class="mb-5">Welcome to LG Library</h1>
        </div>
        <div class="col-md-10 col-lg-8 col-xl-7 mx-auto">
            <div class="form-row">
              <div class="col-12 col-md-9 mb-2 mb-md-0 ">
                  <form class="search-bar" action="/api/home?searchString=" + searchString" method="POST">
                    <label for="search"></label>
                    <input type="search" name="searchString" class="form-control form-control-lg" value="" placeholder= "Start here...">
                    <button type="input" class="btn btn-block btn-lg btn-primary myBtn">Search</button>
                  </form>

                  <ol class="search-list">
                      <% userSearch.forEach(function(search){ %>
                        <li>
                          <span>
                            <div>
                              <%= book.title %>
                            </div>
                          </span>
                        </li>
                        <% }); %>
                  </ol>

                </div>
                <div>
                <h1 class="toggle-content">Hello</h1>
                <ol class="list-group  is-visible">
                  <% userBook.forEach(function(book){ %>
                    <li>
                      <span>
                        <div><%= book.title %> - <%= book.author %> - <%= book.genre %>
                          <form action="/api/home?id=<%= book.id %>&_method=DELETE" method="POST">
                            <input type="submit" class= "btn-primary d-inline-block save" value="DELETE" />
                          </form>
                          <form action="/api/edit?id=<%= book.id %>" method="GET">
                            <input type="submit" class= "btn-primary d-inline-block save" value="EDIT" />
                          </form>

                          </div>
                      </span>
                      </li>
                  <% }); %>
                </ol>
              </div>
              <div class="col-12 col-md-3">
              </div>
            </div>
        </div>
      </div>
    </div>
    <script src="../public/script.js"></script>
</body>
